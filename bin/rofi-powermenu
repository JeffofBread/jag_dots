#! /bin/sh
# adapted from other scripts for MX Linux system (non systemd)
# the script is meant to be run through rofi

chosen=$(printf "\n\n" | rofi -dmenu -i -theme-str '@import "~/.config/rofi/power.rasi"')

case "$chosen" in
	"") bspc quit ;;
	"") i3lock --image ~/Pictures/Backgrounds/debian-lock.png && sudo pm-suspend ;;
	"") i3lock --image ~/Pictures/Backgrounds/debian-lock.png ;;
	*) exit 1 ;;
esac
